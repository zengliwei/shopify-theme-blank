<div class="items">
  {% for block in section.blocks %}
    <div class="item">
      <div class="image">
        <a href="{{ block.settings.link }}">
          <img srcset="{%- if block.settings.image.width >= 375 -%}{{ block.settings.image | img_url: '375x' }} 375w,{%- endif -%}
              {%- if block.settings.image.width >= 750 -%}{{ block.settings.image | img_url: '750x' }} 750w,{%- endif -%}
              {%- if block.settings.image.width >= 1100 -%}{{ block.settings.image | img_url: '1100x' }} 1100w,{%- endif -%}
              {%- if block.settings.image.width >= 1500 -%}{{ block.settings.image | img_url: '1500x' }} 1500w,{%- endif -%}
              {%- if block.settings.image.width >= 1780 -%}{{ block.settings.image | img_url: '1780x' }} 1780w,{%- endif -%}
              {%- if block.settings.image.width >= 2000 -%}{{ block.settings.image | img_url: '2000x' }} 2000w,{%- endif -%}
              {%- if block.settings.image.width >= 3000 -%}{{ block.settings.image | img_url: '3000x' }} 3000w,{%- endif -%}
              {%- if block.settings.image.width >= 3840 -%}{{ block.settings.image | img_url: '3840x' }} 3840w,{%- endif -%}
              {{ block.settings.image | img_url: 'master' }} {{ block.settings.image.width }}w"
              sizes="(min-width: 750px) 50vw, 100vw"
              src="{{ block.settings.image | img_url: '1500x' }}"
              alt="{{ block.settings.image.alt | escape }}"
              loading="lazy"
            />
        </a>
      </div>
      {%- if block.settings.html_content == blank -%}
      <div class="title">
        {{ block.settings.title | escape }}
      </div>
      <div class="content">
        {{ block.settings.content }}
      </div>
      {%- else -%}
      <div class="html_content">
        {{ block.settings.html_content }}
      </div>
      {%- endif -%}
    </div>
  {% endfor %}
</div>

<script>
  require(['jquery', 'carousel'], function($) {
    $('#shopify-section-{{ section.id }} .items').slick({
      adaptiveHeight: true,
      autoplay: true,
      centerMode: true,
      dots: true
    });
  });
</script>

{{ 'carousel.css' | asset_url | stylesheet_tag }}

{% schema %}
{
  "name": "t:sections.carousel.name",
  "tag": "section",
  "class": "carousel",
  "blocks": [
    {
      "type": "item",
      "name": "t:sections.carousel.blocks.item.name",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "t:sections.carousel.blocks.item.settings.image.label"
        },
        {
          "type": "url",
          "id": "link",
          "label": "t:sections.carousel.blocks.item.settings.link.label"
        },
        {
          "type": "text",
          "id": "title",
          "label": "t:sections.carousel.blocks.item.settings.title.label"
        },
        {
          "type": "richtext",
          "id": "content",
          "label": "t:sections.carousel.blocks.item.settings.content.label"
        },
        {
          "type": "html",
          "id": "html_content",
          "label": "t:sections.carousel.blocks.item.settings.html_content.label",
          "info": "t:sections.carousel.blocks.item.settings.html_content.info"
        }
      ]
    }
  ]
}
{% endschema %}